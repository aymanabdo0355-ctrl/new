-- Farm Statistics
local FarmStats = {
    StartTime = 0,
    StartLevel = 0,
    StartMoney = 0,
    CurrentLevel = 0,
    CurrentMoney = 0,
    LevelsGained = 0,
    MoneyGained = 0
}

-- Anti-AFK
